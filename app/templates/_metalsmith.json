{
  "source": "./_posts",
  "destination": "./_site",
  "metadata": {
    "title": "<%= _.capitalize(msTitle) %>",
    "description": "<%= msDesc %>"
  },
  "plugins": {
    "metalsmith-ignore": [
      "_drafts/*",
      "_posts/index.md"
    ],
    "metalsmith-drafts": {},
    "metalsmith-markdown": {},
    "metalsmith-permalinks": {
      "pattern": ":title"
    },
    "metalsmith-collections": {
       "articles": {
        "pattern": "*.md",
        "sortBy": "date",
        "reverse": true
      }
    },
    "metalsmith-templates": {
      "engine": "swig",
      "directory": "_layouts"
    }
  }
}
