{
  "source": "./_posts",
  "destination": "./_site",
  "metadata": {
    "title": "<%= _.capitalize(msTitle) %>",
    "description": "<%= msDesc %>"
  },
  "plugins": {
    "metalsmith-drafts": {},
    "metalsmith-markdown": {},
    "metalsmith-permalinks": {
      "pattern": ":title"
    },
    "metalsmith-templates": {
      "engine": "swig",
      "directory": "_layouts"
    }
  }
}
